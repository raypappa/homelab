{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':semanticCommits',
    ':disableRateLimiting',
    ':dependencyDashboard',
    'docker:enableMajor',
    'customManagers:biomeVersions',
    'github>raypappa/homelab//.github/renovate/customVersioning.json5',
    'github>raypappa/homelab//.github/renovate/customManagers.json5',
    'github>raypappa/homelab//.github/renovate/semanticCommits.json5',
    'github>raypappa/homelab//.github/renovate/commitMessage.json5',
    "group:nodeJs",
    "group:jestPlusTSJest",
    "group:jestPlusTypes",
    "group:kubernetes",
    "group:remark",
    "group:socketio",
    "group:pulumi",
    "group:linters",
    "group:aws-cdkMonorepo"
  ],
  'pre-commit': {
    enabled: true,
  },
  ansible: {
    managerFilePatterns: [
      '/(^|)tasks/[^/]+\\.ya?ml$/',
    ],
  },
  'ansible-galaxy': {
    managerFilePatterns: [
      '/(^|/)(galaxy|requirements)(\\.ansible)?\\.ya?ml$/',
    ],
  },
  argocd: {
    managerFilePatterns: [
      '/(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$/',
    ],
  },
  postUpdateOptions: [
    "pnpmDedupe"
  ],
  lockFileMaintenance: {
    "enabled": true,
    "recreateWhen": "always",
    "automerge": true,
    "rebaseStalePrs": true,
    "branchTopic": "lock-file-maintenance",
    "commitMessageAction": "Lock file maintenance",
    "schedule": ["before 4am on monday"],
    "groupName": null,
    "prBodyDefinitions": {"Change": "All locks refreshed"}
  },
  postUpgradeTasks: {
    "commands": ["pnpm install --no-frozen-lockfile"],
    "fileFilters": ["**/package.json", "**/pnpm-lock.yaml"],
    "executionMode": "update"
  },
}
